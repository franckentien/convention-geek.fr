{% trans_default_domain 'FOSUserBundle' %}



<div class="mdl-cell mdl-cell--12-col ">
<h2>Se connecter</h2>


<p>Ceci est la page de connexion, si vous n'avez pas de compte vous pouvez en crée un ici : <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></p>
    </div>

<div class="my-card-wide mdl-card mdl-shadow--6dp">


    <form action="{{ path("fos_user_security_check") }}" method="post">

        <fieldset>
            <div class="mdl-card__supporting-text">


                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    <label class="mdl-textfield__label" for="username">{{ 'security.login.username'|trans }}</label>
                </div>
                <br>



                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                   <input class="mdl-textfield__input" type="password" id="password" name="_password" required="required" />
                   <label class="mdl-textfield__label" for="password">{{ 'security.login.password'|trans }}</label>

                </div>
                <br>

                <div class="form_errors">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div><br>
                {% endif %}
                </div>

                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="remember_me">
                    <input  type="checkbox" id="remember_me" name="_remember_me" value="on" class="mdl-checkbox__input" />
                    <span class="mdl-checkbox__label">{{ 'security.login.remember_me'|trans }}</span>
                </label>

             </div>

            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
                <input class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </fieldset>
    </form>

</div>
