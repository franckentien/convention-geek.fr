{% trans_default_domain 'FOSUserBundle' %}

<div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">

    <h2>Saisissez votre nouveau mot de passe</h2>

    <div class="mdc-card mdc-elevation--z10 mdc-layout-grid__inner">

    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset mdc-layout-grid__cell--span-12' } }) }}
        <fieldset>

            <div class="mdc-layout-grid__cell--span-12 mdc-layout-grid__inner" >
                <div class="mdc-layout-grid__cell--span-12" >
                    <div class="mdl-card__supporting-text">




                        <div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'mdc-text-field__input'}}) }}
                            {{ form_label(form.plainPassword.first, "", {'label_attr': {'class': 'mdc-floating-label'}}) }}
                            <div class="mdc-line-ripple"></div>
                        </div>
                        <div class="form_errors">
                            {{ form_errors(form.plainPassword.first, {'attr': {'class': 'menu-dark'}}) }}
                        </div>
                        <div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'mdc-text-field__input'}}) }}
                            {{ form_label(form.plainPassword.second, "", {'label_attr': {'class': 'mdc-floating-label'}}) }}
                            <div class="mdc-line-ripple"></div>
                        </div>
                        <div class="form_errors">
                            {{ form_errors(form.plainPassword.second, {'attr': {'class': 'menu-dark'}}) }}
                        </div>
                        {{ form_rest(form) }}

                        {{ form_errors(form) }}

                    </div>
                </div>
            </div>
            <hr class="mdc-list-divider">
            <div class="mdc-layout-grid__cell--span-12">
                <div class="mdc-card__action-icons">

                    <input class="mdc-button mdc-card__action mdc-card__action--button mdc-button--raised" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />

                </div>

            </div>

        </fieldset>
    {{ form_end(form) }}

    </div>

</div>

