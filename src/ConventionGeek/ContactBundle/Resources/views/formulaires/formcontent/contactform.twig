<div class="my-card-wide mdl-card mdl-shadow--6dp">
    {{ form_start(contactform, {'attr': {'class': 'form-horizontal'}}) }}

    <fieldset>
        <div class="mdl-card__supporting-text">

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(contactform.name, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(contactform.name, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(contactform.name, "contact.form.name", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <div class="form_errors">
                    {{ form_errors(contactform.email, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_widget(contactform.email, {'attr': {'class': 'mdl-textfield__input',}}) }}
                {{ form_label(contactform.email, "contact.form.mail", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(contactform.message, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(contactform.message, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(contactform.message, "contact.form.message", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>

        </div>

        <div class="mdl-card__actions mdl-card--border">
            {{ form_widget(contactform.FormSubmit, {'attr': {'class': 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'}}) }}
        </div>

        {{ form_rest(contactform) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(contactform) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(contactform) }}



    </fieldset>
</div>
