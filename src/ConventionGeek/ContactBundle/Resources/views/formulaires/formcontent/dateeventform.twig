<div class="my-card-wide mdl-card mdl-shadow--6dp">
    {{ form_start(dateeventform, {'attr': {'class': 'form-horizontal'}}) }}

    <fieldset>

        <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(dateeventform.evenement, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(dateeventform.evenement, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(dateeventform.evenement, "dateeventform.evenement", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(dateeventform.edition, {'attr': {'class': 'mdl-textfield__input', 'pattern': '-?[0-9]*(\.[0-9]+)?'}}) }}
                <div class="form_errors">
                    <span class="mdl-textfield__error">Input is not a number!</span>
                    {{ form_errors(dateeventform.edition, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(dateeventform.edition, "dateeventform.edition", {'label_attr': {'class': 'mdl-textfield__label'}}) }}


            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(dateeventform.dateDebut, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(dateeventform.dateDebut, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(dateeventform.dateDebut, "dateeventform.dateDebut", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(dateeventform.dateFin, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(dateeventform.dateFin, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(dateeventform.dateFin, "dateeventform.dateFin", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(dateeventform.visiteurs, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(dateeventform.visiteurs, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(dateeventform.visiteurs, "dateeventform.visiteurs", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>


        </div>


        <div class="mdl-card__actions mdl-card--border">
            {{ form_widget(dateeventform.FormSubmit, {'attr': {'class': 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'}}) }}
        </div>

        {{ form_rest(dateeventform) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(dateeventform) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(dateeventform) }}
    </fieldset>
</div>
