                    {{ form_errors(conventionform.description, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(conventionform.description, "conventionform.description", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(conventionform.site, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(conventionform.site, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(conventionform.site, "conventionform.site", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>

        </div>


        <div class="mdl-card__actions mdl-card--border">
            {{ form_widget(conventionform.FormSubmit, {'attr': {'class': 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'}}) }}
        </div>

        {{ form_rest(conventionform) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(conventionform) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(conventionform) }}
    </fieldset>
</div>
