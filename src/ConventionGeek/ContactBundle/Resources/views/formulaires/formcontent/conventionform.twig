            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(conventionform.lieu, {'attr': {'class': 'mdl-textfield__input'}}) }}
                <div class="form_errors">
                    {{ form_errors(conventionform.lieu, {'attr': {'class': 'menu-dark'}}) }}
                </div>
                {{ form_label(conventionform.lieu, "conventionform.lieu", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

            </div>
            <br>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                {{ form_widget(conventionform.description, {'attr': {'class': 'mdl-textfield__input'}}) }}
