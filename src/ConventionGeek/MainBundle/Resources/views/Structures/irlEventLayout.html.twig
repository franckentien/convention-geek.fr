{% extends '@ConventionGeekMain/Structures/menu.html.twig' %}

{% block metaKeyword %}calendier, salon, jeux, vidéo, jeux vidéo, dates, convention, geek, otaku, japan, expo, France, free, manga, évenement{% endblock %}
{% block metaDescription %}Ce site web est un site communautaire qui a pour but de rassembler à la manière d'un calendrier tous les évènements Geek est Otaku en France.{% endblock %}
{% block metaTitle %}Convention Geek: Japan Matsuri 2018{% endblock %}

{% block metaMore %}<meta name="robots" content="noindex">{% endblock %}

{% block pageContent %}

<div class="mdc-layout-grid__inner mdc-elevation--z12">

    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12" style="text-align: center;">
        <h1 style="margin: auto">{% block title %}{% endblock %}</h1>
    </div>

    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-phone mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-6-desktop img-news-cg-panorama">
        <img class="img-news-cg" src="{% block logoSrc %}{% endblock %}" alt="{% block logoAlt %}{% endblock %}"/>
    </div>

    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
        {% block presentation %}{% endblock %}
    </div>

    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 mdc-layout-grid__inner ">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1-phone mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-3-desktop" style="text-align: center;">
            <a href="https://twitter.com/convention_geek">
                <img src="{{ asset('images/socialNetworks/twitter.png') }}" alt="Logo Twitter" style="max-height:48px;">
            </a>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1-phone mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-3-desktop" style="text-align: center;">
            <a href="https://www.facebook.com/ConventionGeek/">
                <img src="{{ asset('images/socialNetworks/facebook.png') }}" alt="Logo Facebook" style="max-height:48px;">
            </a>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1-phone mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-3-desktop" style="text-align: center;">
            <a href="https://www.instagram.com/conventiongeek">
                <img src="{{ asset('images/socialNetworks/instagram.png') }}" alt="Logo Instagram" style="max-height:48px;">
            </a>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1-phone mdc-layout-grid__cell--span-2-tablet mdc-layout-grid__cell--span-3-desktop" style="text-align: center;">
            <a href="https://www.youtube.com/channel/UCXaZPtsT29zkyv7vMP89Vmg">
                <img src="{{ asset('images/socialNetworks/youtube.png') }}" alt="Logo Youtube" style="max-height:48px;">
            </a>
        </div>
    </div>

</div>
{% endblock %}
